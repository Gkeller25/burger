<h1>Burgers!</h1>

<h2>Burgers that are not Devoured!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
        <li>
        	{{name}}

        	<button class="change-devour" data-id="{{id}}" data-newdevour="{{devoured}}">
        		BURGER TIME!
        	</button>

        	
        </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that are Devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
        <li>
        	{{name}}

        	<button class="change-devour" data-id="{{id}}" data-newdevour="{{devoured}}">
        	  BURGER TIME!
        	</button>

        
        </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  
  

  <button type="submit">Add Burger</button>
</form>