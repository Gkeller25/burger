
<div class="container">
  <div class="row">
    <img src="/assets/img/burger.gif" class="mx-auto"/>
  </div>

  <div class="row">
    <div class="container text-center my-2">
      <h1>Burgers!</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-6">
      <div class="container text-center">
        <h2>Available Burgers!</h2>
      </div>
      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            <li class="d-flex justify-content-between">
            	<h4> {{name}} </h4>
            	<button class="change-devour btn btn-secondary" data-id="{{id}}" data-newdevour="{{devoured}}">
            		BURGER TIME!
            	</button>
            </li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-6">
      <div class="container text-center">
        <h2>Devoured Burgers!</h2>
      </div>
      
      <ul>
        {{#each burgers}}
          {{#if devoured}}
            <li class="d-flex justify-content-between">
            	<h4> {{name}} </h4>
            	<button class="change-devour btn btn-secondary" data-id="{{id}}" data-newdevour="{{devoured}}">
            	  MAKE BURGER TIME!
            	</button>
            </li>   
          {{/if}}
        {{/each}}
      </ul> 
    </div>
  </div>

  <div class="row">
    <div class="container text-center">
      <h2>Add a Burger</h2>
    </div>
    <div class="container text-center">
      <form class="create-form">  
        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="name">
        </div>
        <button type="submit" class="btn btn-secondary">Add Burger</button>
      </form>
    </div>
  </div>
</div>